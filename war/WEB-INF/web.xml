<?xml version="1.0" encoding="utf-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xmlns="http://java.sun.com/xml/ns/javaee"
xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
	<servlet>
		<servlet-name>PersonalTrainer</servlet-name>
		<servlet-class>com.personaltrainer.PersonalTrainerServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PersonalTrainer</servlet-name>
		<url-pattern>/personaltrainer</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>PresentationText</servlet-name>
		<servlet-class>com.personaltrainer.PresentationTextServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>PresentationText</servlet-name>
		<url-pattern>/presentationtext</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>GetMessage</servlet-name>
		<servlet-class>com.personaltrainer.GetMessageServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>GetMessage</servlet-name>
		<url-pattern>/getmessage</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list>
</web-app>
